<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/marging_status_error"
	android:background="@color/grey_light"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="@dimen/padding_status_error">

	<ImageView
		android:id="@+id/error_status_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_ic_bluetooth_disabled" />

	<TextView
		android:id="@+id/error_status_title"
		style="@style/NextStep.Text.Bold.Red.CAPS"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingTop="@dimen/spacing_small"
		android:paddingBottom="@dimen/spacing_small"
		android:text="@string/bluetooth_permission_error_title" />

	<TextView
		android:id="@+id/error_status_text"
		style="@style/NextStep.Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="@string/bluetooth_permission_error_text" />

	<TextView
		android:id="@+id/error_status_code"
		style="@style/NextStep.Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/grey_dark"
		android:textSize="@dimen/text_size_small" />

	<TextView
		android:id="@+id/error_status_button"
		style="@style/NextStep.Text.Bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingTop="20dp"
		android:text="@string/bluetooth_turn_on_button_title" />

</LinearLayout>