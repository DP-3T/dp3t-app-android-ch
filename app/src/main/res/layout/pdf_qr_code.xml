<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="90px"
	tools:layout_height="1748px"
	tools:layout_width="1240px">

	<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textColor="@android:color/black"
		android:textSize="50px"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Title" />

	<TextView
		android:id="@+id/subtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:textColor="@android:color/black"
		android:textSize="40px"
		app:layout_constraintTop_toBottomOf="@id/title"
		tools:text="Subtitle" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="200px"
		android:layout_marginBottom="50px"
		android:orientation="vertical"
		app:layout_constraintBottom_toTopOf="@id/swisscovid_icon"
		app:layout_constraintStart_toStartOf="parent">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/pdf_headline"
			android:textColor="@color/blue_main"
			android:textSize="40px" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/pdf_slogan"
			android:textColor="@android:color/black"
			android:textSize="70px"
			android:textStyle="bold" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/pdf_explanation"
			android:textColor="@android:color/black"
			android:textSize="40px" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="20px"
		android:gravity="center_vertical"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@id/swisscovid_icon"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/swisscovid_icon"
		app:layout_constraintTop_toTopOf="@id/swisscovid_icon">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/pdf_swisscovid_app"
			android:textColor="@android:color/black"
			android:textSize="40px"
			android:textStyle="bold" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/pdf_download_app"
			android:textColor="@color/blue_main"
			android:textSize="25px" />

	</LinearLayout>

	<ImageView
		android:id="@+id/swisscovid_icon"
		android:layout_width="90px"
		android:layout_height="90px"
		android:src="@mipmap/ic_launcher"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<ImageView
		android:layout_width="600px"
		android:layout_height="600px"
		android:layout_marginTop="250px"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@drawable/ic_qr_code"
		tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>