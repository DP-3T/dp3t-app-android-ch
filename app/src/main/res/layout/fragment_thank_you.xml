<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/white"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:orientation="vertical">

			<Space
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="2" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:src="@drawable/ill_danke" />

			<Space
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1" />

			<TextView
				style="@style/NextStep.Text.Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_huge"
				android:gravity="bottom|center_horizontal"
				android:text="@string/inform_send_thankyou" />

			<TextView
				android:id="@+id/inform_thank_you_text_info"
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_medium_large"
				android:gravity="center_horizontal"
				android:paddingStart="@dimen/spacing_huge"
				android:paddingEnd="@dimen/spacing_huge"
				tools:text="@string/inform_send_thankyou_text_onsetdate_info" />

			<TextView
				android:id="@+id/inform_thank_you_text_onsetdate"
				style="@style/NextStep.Text.Bold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:paddingHorizontal="@dimen/spacing_huge"
				android:text="@string/inform_send_thankyou_text_onsetdate" />

			<TextView
				android:id="@+id/inform_thank_you_text_checkins"
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_very_large"
				android:gravity="center_horizontal"
				android:paddingHorizontal="@dimen/spacing_huge"
				android:text="@string/inform_send_thankyou_text_checkins" />

			<TextView
				android:id="@+id/inform_thank_you_text_stop_infection_chains"
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/spacing_very_large"
				android:gravity="center_horizontal"
				android:paddingHorizontal="@dimen/spacing_huge"
				android:text="@string/inform_send_thankyou_text_stop_infection_chains" />

			<Space
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="3" />

		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:elevation="@dimen/spacing_small">

		<Button
			android:id="@+id/inform_thank_you_button_continue"
			style="@style/NextStep.Button.Purple"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginVertical="@dimen/spacing_medium_large"
			android:text="@string/inform_continue_button" />
	</FrameLayout>

</LinearLayout>


