<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="CrowdNotifier.Card" parent="Widget.MaterialComponents.CardView">
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
		<item name="cardElevation">@dimen/card_elevation</item>
		<item name="android:minHeight">@dimen/button_height</item>
		<item name="cardCornerRadius">@dimen/button_radius</item>
	</style>

	<style name="CrowdNotifier.Card.Grey">
		<item name="android:minHeight">0dp</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">false</item>
		<item name="cardElevation">0dp</item>
		<item name="cardBackgroundColor">@color/light_grey</item>
	</style>

	<style name="CrowdNotifier.Text" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:textColor">@color/main</item>
		<item name="android:lineSpacingMultiplier">1.1</item>
		<item name="android:fontFamily">@font/inter_light</item>
	</style>

	<style name="CrowdNotifier.Text.Title">
		<item name="android:textSize">@dimen/text_size_splash_title</item>
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="CrowdNotifier.Text.Subtitle">
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="CrowdNotifier.Text.Status">
		<item name="android:letterSpacing">0.075</item>
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Small">
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Primary">
		<item name="android:textColor">@color/primary</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Primary.Small">
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Primary.Small.Thin">
		<item name="android:fontFamily">@font/inter_regular</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Tertiary">
		<item name="android:textColor">@color/tertiary</item>
	</style>

	<style name="CrowdNotifier.Text.Status.Tertiary.Small">
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="CrowdNotifier.ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textAllCaps">false</item>
		<item name="backgroundTint">@drawable/reminder_toggle_background_color</item>
		<item name="strokeColor">@drawable/reminder_toggle_text_color</item>
		<item name="android:textColor">@drawable/reminder_toggle_text_color</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="CrowdNotifier.Button" parent="Widget.MaterialComponents.Button">
		<item name="backgroundTint">@null</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@font/inter_bold</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:background">@drawable/bg_button_default_crowdnotifier</item>
		<item name="android:stateListAnimator">@null</item>
		<item name="android:height">@dimen/button_height</item>
		<item name="android:paddingStart">@dimen/spacing_huge</item>
		<item name="android:paddingEnd">@dimen/spacing_huge</item>
	</style>

	<style name="CrowdNotifier.EditText" parent="Widget.AppCompat.EditText">
		<item name="android:background">@drawable/bg_edit_text</item>
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:textColor">@color/main</item>
		<item name="android:padding">@dimen/spacing_medium</item>
	</style>

</resources>